{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.1.0",
  "main": "index",
  "bin": {
    "{{name}}": "cli.js"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "commander": "^2.15.1",
    "compression": "^1.7.2",
    "config": "^1.30.0",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "joey": "^1.5.3",
    "montage": "montagejs/montage#master",
    "morgan": "^1.9.0",
    "socket.io": "^2.1.0",
    "semver": "^5.5.0",
    "socket.io-client": "^2.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "concurrently": "^3.5.1",
    "http-server": "^0.11.1",
    "mocha": "^5.0.5",
    "istanbul": "^0.4.5",
    "open": "0.0.5"
  },
  "exclude": [
    "test",
    "coverage"
  ],
  "engines": {
    "node": ">=4.x.x"
  },
  "scripts": {
    "lint": "jshint .",
    "start": "npm run start:docker",
    "stop": "npm run stop:docker",
    "start:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "pretest": "npm install",
    "test": "npm run test:istanbul",
    "test:mocha": "mocha test/index.js --exit",
    "test:istanbul": "istanbul cover _mocha -- test/index.js index.js --exit",
    "integration": "concurrently \"npm run serve:test\" \"npm run open:test\"",
    "doc": "concurrently \"npm run serve:doc\" \"npm run open:doc\"",
    "start:node": "npm run serve",
    "serve": "node index",
    "serve:test": "http-server -p 8081 .",
    "serve:doc": "http-server -p 8082 doc",
    "open:app": "open http://localhost:8080",
    "open:test": "open http://localhost:8081/test",
    "open:doc": "open http://localhost:8082",
    "open:pghero": "open http://localhost:5001",
    "open:pgadmin": "open http://localhost:5002",
    "open:kfma-manager": "open http://localhost:5003",
    "start:docker": "npm run start:compose",
    "stop:docker": "npm run stop:compose",
    "start:swarm": "docker swarm init",
    "start:stack": "docker stack deploy -c docker-compose.yml '{{name}}-stack'",
    "stop:stack": "docker stack rm '{{name}}-stack'",
    "stop:swarm": "docker swarm leave --force",
    "build": "npm run build:compose",
    "build:docker": "docker build . -t {{name}}:develop-SNAPSHOT",
    "build:compose": "docker-compose build",
    "start:compose": "docker-compose up -d",
    "stop:compose": "docker-compose down",
    "clean": "npm run clean:modules && npm run clean:compose",
    "clean:modules": "rm -fr node_modules",
    "clean:compose": "docker-compose rm"
  }
}
